<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fragments.MonthlyFragment"
    >

    <TextView
        android:id="@+id/sort_by_text_monthly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by: "
        android:textAllCaps="true"
        android:textColor="#FFC107"
        android:textStyle="bold"
        android:textSize="15dp" />
    <Spinner
        android:id="@+id/sort_by_spinner_monthly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sort_by_text_monthly"/>
    <TextView
        android:id="@+id/telling_location_device_monthly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_monthly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sort_by_spinner_monthly"
        android:scrollbars="vertical" />

</RelativeLayout>